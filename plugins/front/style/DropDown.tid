type: text/vnd.tiddlywiki

div.tc-drop-down {
  border: 2px solid <<color muted-foreground>>;
  margin: 4px;
	border-radius: 4px;
}

div.tc-drop-down a {
  color: <<color primary>>;
}

div.tc-drop-down button:hover svg {
  fill: <<color background>> !important;
}

div.tc-drop-down button:hover svg .tc-fill-background {
  fill: <<color primary>> !important;
}

div.tc-search-drop-down, div.tc-block-dropdown {
  border: solid <<color muted-foreground>> 2px;
	border-radius: 4px;
}

div.tc-search-drop-down em {
  margin: 4px 0px 0px 6px;
}