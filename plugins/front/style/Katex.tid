.katex {
  color: <<color katex>>;
}

.katex-display {
  background-color: <<color page-background>>;
  border-radius: 0.5em;
  overflow-x: overlay;
  overflow-y: hidden;
  padding: 0.5em;
}

button .katex {
  color: <<color foreground>>;
}

button:hover .katex {
  color: <<color background>>;
}