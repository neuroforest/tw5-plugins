title: $:/plugins/neuroforest/front/style/NeuroBox
type: text/css

div.nc-neuro-box {
  padding: 0.4em;
  border: 1px solid white;
  border-radius: 4px;
  margin-left: 1em;
  overflow-x: hidden;
}

.nc-neuro-box-header {
  font-size: 1.2em;
  display: table;
  margin-bottom: 1em;
}

.nc-neuro-box-header span {
  white-space: initial;
  cursor: auto;
}

div.nc-neuro-box table {
  width: 100%;
  margin-top: 0em;
  margin-bottom: 0em;
  margin: 0px;
  padding: 0px;
  border: none;
}

div.nc-neuro-box-wrapper p {
  margin-block-start: 0em;
}

div.nc-neuro-box img.nc-image {
  background-color: #f4e0d7;
  height: 100%;
  max-height: 300px;
  width: 100%;
}

img.nc-icon {
  border: none;
  overflow: hidden;
}

tr.nc-icon-row {
  height: 0px;
}

tr.nc-icon-row td {
  border: none;
  height: 0px;
}

tr.nc-icon-row a {
  border: none;
}

tr.nc-icon-row svg {
  height: 42px;
  width: 42px;
}